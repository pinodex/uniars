<Page x:Class="Uniars.UI.Pages.Main.Booking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Title="Booking">

    <Grid Height="208" Width="339" Focusable="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="88*" />
            <ColumnDefinition Width="251*" />
        </Grid.ColumnDefinitions>
        <Label Content="Source" Height="28" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="0,26,0,0" Name="txtSource" VerticalAlignment="Top" Width="188" Text="" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2" GotFocus="txtSource_GotFocus" />

        <Label Content="Destination" Height="28" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,68,0,0" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="0,94,0,0" Name="txtDestination" VerticalAlignment="Top" Width="188" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2" />
    </Grid>
</Page>
