<Window x:Class="UNIARS.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window - UNIARS" Height="356" Width="640" WindowState="Maximized" WindowStartupLocation="CenterScreen" Icon="/UNIARS;component/Images/IconMaskedWhite.ico" WindowStyle="None" Topmost="True">
    
    <Grid>
        <Image Height="100" HorizontalAlignment="Left" Stretch="UniformToFill" VerticalAlignment="Top" Width="100" Source="/UNIARS;component/Icon.ico" Margin="12,0,0,0" />
        
        <TextBlock Height="23" HorizontalAlignment="Right" Margin="0,20,20,0" Text="Logged in as" VerticalAlignment="Top" />
        <TextBlock Height="32" HorizontalAlignment="Right" Margin="0,35,20,0" Name="txtLoginUsername" Text="Username" VerticalAlignment="Top" FontSize="20" />
        
        <Button Content="Logout" Height="20" HorizontalAlignment="Right" Margin="0,70,20,0" Name="btnLogout" VerticalAlignment="Top" Width="75" Click="btnLogoutClick" />
        
        <Separator Height="5" HorizontalAlignment="Stretch" Margin="0,100,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>
